<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBg">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/windowBg"
        app:elevation="0dp">




            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    </android.support.design.widget.AppBarLayout>


    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:background="@color/windowBg"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:padding="5dp"
                    android:background="@drawable/round_light_gray"
                    android:adjustViewBounds="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:id="@+id/show_bar"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/round_violet"></LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/fac_info_holder"
                android:background="@drawable/stroke_rec_standard"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:padding="15dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SIVA RAMAKRISHNAN"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/violet"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/fac_name" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ASSISTANT PROFFESSOR"
                    android:textSize="15sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/new_gray"
                    android:id="@+id/fac_designation"
                    android:layout_marginTop="6dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SITE"
                    android:textSize="15sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/new_gray"
                    android:id="@+id/fac_school"
                    android:layout_marginTop="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CONTACT"
                    android:textSize="17sp"
                    android:textColor="@color/violet"
                    android:id="@+id/contact_head"
                    android:layout_marginTop="7dp" />

                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="2dp"
                    android:background="@drawable/round_gray"
                    android:layout_marginLeft="5dp"></LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sivaramakrishna@vit.ac.in"
                    android:textSize="14sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/new_gray"
                    android:id="@+id/fac_email"
                    android:layout_marginTop="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9827569494"
                    android:textSize="14sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/new_gray"
                    android:id="@+id/fac_number"
                    android:layout_marginTop="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CABIN"
                    android:textSize="17sp"
                    android:textColor="@color/violet"
                    android:id="@+id/cabin_head"
                    android:layout_marginTop="7dp" />

                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="2dp"
                    android:background="@drawable/round_gray"
                    android:layout_marginLeft="5dp"></LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SJT302"
                    android:textSize="14sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/new_gray"
                    android:id="@+id/fac_cabin_address"
                    android:layout_marginTop="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="54302 (intercomm number)"
                    android:textSize="14sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/new_gray"
                    android:id="@+id/fac_cabin_intercom"
                    android:layout_marginTop="6dp" />
            </LinearLayout>





        </LinearLayout>

        </android.support.v4.widget.NestedScrollView>
    </android.support.design.widget.CoordinatorLayout>