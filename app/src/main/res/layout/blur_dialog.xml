<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_white"
    android:layout_gravity="center"
    android:layout_margin="20dp"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:padding="10dp">
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/code"
        android:textColor="@color/black"
        android:text="ITE301"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_weight="49"/>
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/lightgray"></LinearLayout>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/slot"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:text="A1+TA1"
        android:layout_weight="50"/>
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/faculty"
        android:textColor="@color/black"
        android:text="SIVANESAN S"
        android:textSize="20sp"
        android:gravity="center"
        android:padding="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_10dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/head"
            android:textSize="17sp"
            android:textColor="@color/gray"
            android:text="Lectures"
            android:padding="5dp"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightgray"></LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/file_name"
            android:textSize="17sp"
            android:textColor="@color/colorPrimary"
            android:text="Introduction of Computer Graphics and its applictions"
            android:padding="10dp"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:layout_marginTop="10dp"
        android:padding="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/date"
            android:textColor="@color/black"
            android:text="4th JAN"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_weight="49"/>
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/lightgray"></LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/day"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="MONDAY"
            android:layout_weight="50"/>
    </LinearLayout>




</LinearLayout>