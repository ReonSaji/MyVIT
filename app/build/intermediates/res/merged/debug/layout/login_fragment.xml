<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBg"
    android:orientation="vertical"
    android:gravity="center_vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="7dp"
                    android:layout_height="match_parent"
                    android:background="@color/violet">
                    </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/login_screen_head"
                    android:padding="10dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/translucent_black"
                    android:textSize="23sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <EditText
                    android:id="@+id/regno_col"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_box_bg_both"
                    android:capitalize="characters"
                    android:ems="9"
                    android:hint="Register Number"
                    android:maxEms="9"
                    android:maxLength="9"
                    android:paddingBottom="7dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="7dp"
                    android:singleLine="true"
                    android:textAllCaps="true"
                    android:textColor="@color/new_gray"
                    android:textColorHint="@color/new_gray"
                    android:textCursorDrawable="@null"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/new_gray">

            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:weightSum="100">

                    <EditText
                        android:id="@+id/date_col"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="30"
                        android:background="@drawable/login_box_bg_both"
                        android:ems="2"
                        android:gravity="center"
                        android:hint="DD"
                        android:inputType="date"
                        android:maxEms="2"
                        android:maxLength="2"
                        android:paddingBottom="7dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="7dp"
                        android:singleLine="true"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:textColor="@color/new_gray"
                        android:textColorHint="@color/new_gray"
                        android:textCursorDrawable="@null"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/month_col"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="30"
                        android:background="@drawable/login_box_bg_both"
                        android:ems="2"
                        android:gravity="center"
                        android:hint="MM"
                        android:inputType="number"
                        android:maxEms="2"
                        android:maxLength="2"
                        android:paddingBottom="7dp"
                        android:textStyle="bold"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="7dp"
                        android:singleLine="true"
                        android:textAllCaps="true"
                        android:textColor="@color/new_gray"
                        android:textColorHint="@color/new_gray"
                        android:textCursorDrawable="@null"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/year_col"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:background="@drawable/login_box_bg_both"
                        android:ems="4"
                        android:gravity="center"
                        android:hint="YYYY"
                        android:inputType="number"
                        android:maxEms="4"
                        android:maxLength="4"
                        android:textStyle="bold"
                        android:paddingBottom="7dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="7dp"
                        android:singleLine="true"
                        android:textAllCaps="true"
                        android:textColor="@color/new_gray"
                        android:textColorHint="@color/new_gray"
                        android:textCursorDrawable="@null"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/new_gray">

                </LinearLayout>

                <EditText
                    android:id="@+id/phoneno_col"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/login_box_bg_both"
                    android:ems="14"
                    android:hint="Parent's Mobile Number"
                    android:maxEms="14"
                    android:maxLength="14"
                    android:paddingBottom="7dp"
                    android:paddingLeft="10dp"
                    android:textStyle="bold"
                    android:paddingRight="10dp"
                    android:paddingTop="7dp"
                    android:singleLine="true"
                    android:textAllCaps="true"
                    android:textColor="@color/new_gray"
                    android:textColorHint="@color/new_gray"
                    android:textCursorDrawable="@null"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/new_gray">

                </LinearLayout>

                <TextView
                    android:id="@+id/errortext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="Error"
                    android:textColor="@color/errorcolor"
                    android:textSize="17sp"
                    android:visibility="gone" />

                <RadioGroup
                    android:id="@+id/campus_select_radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <RadioButton
                        android:id="@+id/vellore_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:textStyle="bold"
                        android:checked="true"
                        android:gravity="center"
                        android:text="Vellore"
                        android:buttonTint="@color/new_gray"
                        android:textColor="@color/new_gray" />

                    <RadioButton
                        android:id="@+id/chennai_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:gravity="center"
                        android:text="Chennai"
                        android:textStyle="bold"
                        android:buttonTint="@color/new_gray"
                        android:textColor="@color/new_gray" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/next_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/login_box_bg_both"
                    android:layout_marginBottom="10dp"
                    android:text="Login"
                    android:textColor="@color/gray"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <!--<Button
                    android:id="@+id/next_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/next_button_bg"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:text="GET STARTED"
                    android:textColor="@color/white"
                    android:textSize="21sp" />-->

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>