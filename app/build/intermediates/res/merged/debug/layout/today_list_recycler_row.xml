<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row_holder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        android:padding="5dp"
        android:background="?attr/selectableItemBackground"
        android:paddingBottom="15dp">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="20">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/subject_att_indicator"/>

        </LinearLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="60">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:gravity="left|center_vertical"
            android:id="@+id/middle_content_info">

            <TextView
                android:id="@+id/subject_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/general_medium_thin"
                android:text="IN ONE HOUR"
                android:textStyle="bold"
                android:textColor="@color/new_gray"/>

           <TextView
               android:id="@+id/subject_name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="@dimen/general_medium2_thin"
               android:text="SEMICONDUCTOR"
               android:layout_marginTop="5dp"
               android:textStyle="bold"
               android:transitionName="@string/sub_name_transition"
               android:textColor="@color/black"/>

            <TextView
                android:id="@+id/subject_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/general_medium2_thin"
                android:text="lab"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:transitionName="@string/sub_name_transition"
                android:textColor="@color/violet"/>


        </LinearLayout>

        </FrameLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="20"
            android:gravity="bottom"
            android:id="@+id/right_content_info">


            <TextView
                android:id="@+id/subject_per"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/general_more_big_bold"
                android:text="79 %"
                android:textColor="@color/new_gray"/>


            <TextView
                android:id="@+id/subject_venue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/general_medium2_thin"
                android:textStyle="bold"
                android:text="SJT701"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:ellipsize="marquee"
                android:textColor="@color/gray"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/lightgray"
        android:id="@+id/cont_line"
        android:orientation="vertical"></LinearLayout>
    </LinearLayout>
